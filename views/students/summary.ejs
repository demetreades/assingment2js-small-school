<!DOCTYPE html>
<html lang="en">
  <head>
    
    <%- include('../partials/head.ejs')  %> 

  </head>
  <body>

    <div class="container"> 

      <%- include('../partials/header')  %> 

      <%- include('../partials/nav')  %> 

      <main>
        <table>

          <thead>
            <tr>
              <td>#</td>
              <td>Firstname</td>
              <td>Lastname</td>
              <td>Tuition fees</td>
              <td>Birthdate</td>
              <td>Actions</td>
            </tr>
          </thead>
          
          <tbody>
            <% if(studentsArray != undefined) { %>
              <% studentsArray.data.forEach((student, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= student.first_name %></td>
                  <td><%= student.last_name %></td>
                  <td><%= student.tuition_fees %></td>
                  <td><%= student.date_of_birth %></td>
                  <td>
                    <span>
                      <a class="success" href='/students/update/<%= student.id %>'>
                        <i class="fas fa-user-edit"></i>
                      </a>
                    </span>
                    <span>
                      <a class="error" href='/students/delete/<%= student.id %>'>
                        <i class="far fa-trash-alt"></i>
                      </a>
                    </span>
                  </td>
                </tr>
              <% }) %>
            <% } %> 

          </tbody>
        </table>
      </main>
          
      <%- include('../partials/footer')  %> 
            
    </div>

  </body>
</html>
      