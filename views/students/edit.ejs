<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head') %>
  </head>
  <body>
    <div class="container">
      <header>
        <%- include('../partials/header', {title: 'Edit Student'}) %>
        <p>Form</p>
      </header>

      <%- include('../partials/nav') %>

      <main>
        <form action="/students/update" method="post">
          <h3>Edit Student #<%= result.id %> <%= result.fullName() %></h3>

          <label for="first_name">First name</label>
          <input
            type="text"
            name="first_name"
            id="first_name"
            pattern="[α-ωΑ-ΩA-Za-z]{2,25}"
            value="<%= result.firstName %>"
            required
          />

          <label for="last_name">Last name</label>
          <input
            type="text"
            name="last_name"
            id="last_name"
            pattern="[α-ωΑ-ΩA-Za-z]{2,25}"
            value="<%= result.lastName %>"
            required
          />

          <label for="tuition_fees">Tuition fees</label>
          <input
            type="number"
            name="tuition_fees"
            id="tuition_fees"
            pattern="([0-9]*[.])?[0-9]+"
            value="<%= result.tuitionFees.amount %>"
            required
          />

          <label for="discount">Discount</label>
          <input
            type="number"
            name="discount"
            id="discount"
            pattern="[0-9]"
            min="0"
            max="100"
            value="<%= result.tuitionFees.discount %>"
            required
          />

          <label for="date_of_birth">Date of birth</label>
          <input
            type="date"
            name="date_of_birth"
            id="date_of_birth"
            min="<%= result.dateUtil.minMaxBirthdate(55) %>"
            max="<%= result.dateUtil.minMaxBirthdate(18) %>"
            value="<%= result.dateOfBirth %>"
            required
          />

          <input
            type="text"
            name="id"
            id="id"
            value="<%= result.id %>"
            hidden
            readonly
          />

          <input type="submit" value="Update" />
        </form>
      </main>

      <%- include('../partials/footer') %>
    </div>
  </body>
</html>
