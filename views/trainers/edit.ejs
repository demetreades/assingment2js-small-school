<!DOCTYPE html>
<html lang="en">
<head>

  <%- include('../partials/head')  %> 
    
</head>
<body>
  <div class="container">
  <header>
    <%- include('../partials/header', {title: 'Edit Trainer'})  %> 
    <p>Form</p>
  </header>      
        
    <%- include('../partials/nav')  %> 
        
      <main>

        <form action="/trainers/update" method="post">

          <h3>Edit Trainer <br>
            #<%= trainer.id %> <%= trainer.fullName() %> 
          </h3>

          <label for="first_name">First name</label>
          <input type="text" name="first_name" id="first_name"  pattern="[A-Za-z]{2,25}" value="<%= trainer.firstName %>"><br>

          <label for="last_name">Last name</label>
          <input type="text" name="last_name" id="last_name"  pattern="[A-Za-z]{2,25}" value="<%= trainer.lastName %>"><br>

          <label for="subjects">Subject</label>
          <select name="subjects" id="subjects" required>
            <option value="" disabled hidden>Choose a subject</option>
            <% subjects.forEach(subject => { %>
              <option value="<%= subject.id %>"> <%= subject.details %>  </option>
            <% }) %>
          </select>
          
          <label for="courses">Course</label>
          <select name="courses" id="courses" required>
            <option value="" disabled hidden>Choose a course</option>
            <% courses.forEach(course => { %>
              <option value="<%= course.id %>"> <%= course.description %>  </option>
            <% }) %>
          </select>

          <input type="text" name="id" id="id" value="<%= trainer.id %>" hidden readonly>

          <input type="submit" value="Update">

        </form>

      </main>
        
      <%- include('../partials/footer')  %> 
        
    </div>
  </body>
</html>
