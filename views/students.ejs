     -->
    <main>

      <table id="students_table" class="display" style="width:100%">
        
        <thead>
          <div class="blue1"></div>
          <tr>
            <td>ID</td>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Hobby</td>
            <td>Actions</td>
          </tr>
        </thead>
        
        <tbody>
          <% if(studentsArray != undefined)  { %>
            <% for(let i = 0; i < studentsArray.data.length; i++) { %>
              <tr>
                <td><%= studentsArray.data[i].id %></td>
                <td><%= studentsArray.data[i].student_first %></td>
                <td><%= studentsArray.data[i].student_last %></td>
                <td><%= studentsArray.data[i].hobby %></td>
                <td><span><a href='/students/update/<%= studentsArray.data[i].id %>'  class="success">Update</a></span> <span><a href='/students/delete/<%= studentsArray.data[i].id %>' class="error">Delete</a></span></td>
              </tr>
              <% } %>
              <% } %> 
            </tbody>
            
          </table>
          <div class="blue2"></div>
        </main>
        
        <%- include('partials/footer')  %> 
          
        </div>
